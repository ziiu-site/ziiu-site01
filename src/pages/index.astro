---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="ZiiU â€” Coming Soon">
  <style>
    .cs-wrap {
      min-height: calc(100vh - 140px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 28px 0;
    }
    .cs-card {
      width: 100%;
      max-width: 920px;
      border-radius: 18px;
      border: 1px solid #e6edf3;
      background: #fff;
      overflow: hidden;
    }
    .cs-top {
      display: flex;
      justify-content: center;
      padding: 22px 18px;
      border-bottom: 1px solid #e8edf2;
      background: rgba(244,246,248,0.7);
    }
    .cs-logo {
      height: 48px;
      width: auto;
    }
    .cs-image {
      width: 100%;
      height: auto;
      display: block;
    }
  </style>

  <div class="cs-wrap">
    <div class="cs-card">
      <div class="cs-top">
        <img class="cs-logo" src="/logo.png" alt="ZiiU Logo" />
      </div>
      <img class="cs-image" src="/coming-soon.jpg" alt="ZiiU Coming Soon" />
    </div>
  </div>
</BaseLayout>
